<meta name="theme-color" content="#7952b3">
{# home.css #}
<link rel="stylesheet" href="domains/admin.css">
{% endblock %}

{% block title %}{% endblock %}
    
{% block body %}
    {% include 'partials/header.html.twig' %}
    <main class="container" id="main-container">
    <h3 class="mb-4 mt-4">Se connecter</h3>
    {% if error %}
        <div class="alert alert-danger">
            {{ error .messageKey }}
        </div>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Username</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="_username" value="{{ last_username }}">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="_password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    {% include 'partials/footer.html.twig' %}
    </main>
{% endblock %}